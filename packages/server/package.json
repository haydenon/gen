{
  "name": "@haydenon/gen-server",
  "packageManager": "yarn@3.3.0",
  "version": "0.0.13",
  "description": "A library for easily setting up data generation",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "tsconfig.json"
  ],
  "scripts": {
    "prepare": "npm run build",
    "copyweb": "rimraf ./dist/client && yarn workspace @haydenon/gen-web build && copyfiles -u 3 ../web/build/**/* ./dist/client/",
    "build": "tsc --noEmit && node esbuild.config.js && yarn run copyweb",
    "dev": "node esbuild.config.js watch",
    "test": "jest"
  },
  "keywords": [],
  "author": "Hayden O'Neill",
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.15.15",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.24.0",
    "jest": "^29.1.2",
    "npm-dts": "^1.3.12",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  },
  "dependencies": {
    "@faker-js/faker": "^7.5.0",
    "express": "^4.18.2",
    "prettier": "^2.7.1",
    "ws": "^8.11.0"
  }
}
